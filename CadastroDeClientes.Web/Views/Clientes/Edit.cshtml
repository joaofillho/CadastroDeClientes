@model CadastroDeClientes.Domain.Entities.Cliente

@{
    ViewBag.Title = "Edição";
}


@section Styles {
    <link href="@Url.Content("~/Content/toastr.min.css")" rel="stylesheet" type="text/css" />
}

<h2>Edição</h2>
@using (Html.BeginForm("Edit", "Clientes", FormMethod.Post, new { id = "formCrud" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ClienteId)

    <div class="row">
        <div class="form-group col-xs-8">
            @Html.LabelFor(model => model.Nome)
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-xs-4">
            @Html.LabelFor(model => model.Cpf)
            @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", id = "idcpf", type = "number"} })
            @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
            <div id="alertaCpf" class="alert-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-8">
            @Html.LabelFor(model => model.DataNascimento)
            @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control", id = "idDataNascimento"} })
            @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
            <div id="alertaIdade" class="alert-danger"></div>
        </div>
        <div class="form-group col-xs-3">
            @Html.LabelFor(model => model.Sexo)
            @Html.EnumDropDownListFor(model => model.Sexo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="button" value="Confirmar" class="btn btn-primary btn-lg" />
    </div>
}

<script src="~/Scripts/inputmask/jquery.inputmask.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/projeto/EnviarFormulario.js"></script>
<script src="~/Scripts/projeto/utilities.js"></script>

<script type="text/javascript">

    var btnAcao = $("input[type='button']");
    var formulario = $("#formCrud");

</script>

